# =============================================================================
# STRATIFY - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aqts_db
DB_USER=postgres
# SECURITY WARNING: Change this password in production!
DB_PASSWORD=<your_secure_password_here>

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SERVICE URLs (Docker Compose)
# =============================================================================
# When running in Docker, use service names:
DATA_SERVICE_URL=http://data-service:5001
STRATEGY_SERVICE_URL=http://strategy-engine:5002

# When running locally, use localhost:
# DATA_SERVICE_URL=http://localhost:5001
# STRATEGY_SERVICE_URL=http://localhost:5002

# =============================================================================
# MONITORING (Grafana)
# =============================================================================
# SECURITY WARNING: Change these credentials in production!
GRAFANA_USER=admin
GRAFANA_PASSWORD=<your_secure_password_here>

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Flask environment: development, production
FLASK_ENV=development

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# SECURITY NOTES
# =============================================================================
# 1. Always use strong, unique passwords in production
# 2. Use environment-specific .env files (.env.dev, .env.prod)
# 3. Consider using secrets management tools (HashiCorp Vault, AWS Secrets Manager)
# 4. Rotate credentials regularly
# 5. Never commit .env files to version control
